{
    "settings": {
        "import/parsers": {
            "@typescript-eslint/parser": [".ts", ".tsx"]
        },
        "import/resolver": {
            "typescript": {
                "alwaysTryTypes": true,
                "project": ["tsconfig.json"]
            },
            "node": {
                "project": ["tsconfig.json"]
            }
        }
    },
    "env": {
        "es2021": true,
        "node": true
    },
    "extends": [
        "eslint:recommended"
    ],
    "parser": "@typescript-eslint/parser",
    // "parserOptions": {
    //     "ecmaVersion": 11,
    //     "sourceType": "module"
    // },
    "plugins": [
        "@typescript-eslint",
        "import"
    ],
    "rules": {
        "semi": ["error", "always"],
        "quotes": ["error", "single"]
    }
}